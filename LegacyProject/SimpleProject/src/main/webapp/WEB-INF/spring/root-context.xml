<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
		
	<!--  Spring이 생명 주기 를 관리하는 객체 ==  Bean--> 
	<!-- 
		* root-context.xml
		서버가 구동되면서 세팅되어야하는 (Bean으로 등록) 내욕 작성(DB접속, 트랜잭션처리, 외부모듈 연결"
		web.xml파일을 거쳐서 로딩되는 문서 == preloading 
	 -->
	 <bean class="org.apache.commons.dbcp.BasicDataSource"
	 	   id="dataSource" destroy-method="close">
	 	   <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
	 	   <property name="url" value="jdbc:oracle:thin:@115.90.212.20:10000:XE" />
	 	   <property name="username" value="CJY19" />
	 	   <property name="password" value="CJY191234" />
	 </bean>
	 <!-- 
	 DataSource datasource = new BasicDataSource();
	 datasource.setDriverClassName("orcle.jdbc.driver.OracleDriver");
	 datasource.setUrl("jdbc:oracle:thin:@115.90.212.20:10000:xe");
	 dataSource.setUsername("CJY19");
	 dataSource.setPassword("CJY191234");
	  -->
	 <bean class="org.mybatis.spring.SqlSessionFactoryBean" id="sqlSessionFactory">
	 	<property name="configLocation" value="classpath:mybatis-config.xml" />
	 	<property name="dataSource" ref="dataSource" />
	 </bean>
	 
	 <bean class="org.mybatis.spring.SqlSessionTemplate" id="sqlSession">
	 	<constructor-arg ref="sqlSessionFactory"/>
	 </bean>
	 <!-- 
	 	SqlSession sqlSession = new SqlSessionTemplate(sqlSessionFactory);
	  -->
</beans>